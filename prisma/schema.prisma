// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Administradores
model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Hash bcrypt
  name      String
  email     String   @unique
  role      String   @default("admin") // admin, superadmin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  logs      ActivityLog[]
}

// Miembros de la cooperativa
model Member {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  employeeId String   @unique // ID de empleado (8 dígitos)
  phone      String?
  status     String   @default("active") // active, inactive, suspended
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  attendance         Attendance?
  votes              Vote[]
  candidates         Candidate[]
  positionAssignments PositionAssignment[]
}

// Registro de asistencia
model Attendance {
  id               String   @id @default(uuid())
  memberId         String   @unique
  member           Member   @relation(fields: [memberId], references: [id])
  code             String   @unique
  confirmedAt      DateTime @default(now())
  emailSent        Boolean  @default(false)
  emailSentAt      DateTime?
  status           String   @default("active") // active, cancelled, regenerated
  regeneratedCount Int      @default(0)
  updatedAt        DateTime @updatedAt
}

// Cargos disponibles por consejo
model Position {
  id              String    @id @default(uuid())
  name            String    // "Presidente", "Secretario", etc.
  council         String    // "administracion", "vigilancia", "credito"
  order           Int       // Orden de visualización
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  assignments     PositionAssignment[]

  @@unique([name, council])
}

// Asignación de cargos a miembros (después de votación)
model PositionAssignment {
  id            String    @id @default(uuid())
  positionId    String
  position      Position  @relation(fields: [positionId], references: [id], onDelete: Cascade)
  memberId      String
  member        Member    @relation(fields: [memberId], references: [id], onDelete: Cascade)
  termStartDate DateTime  @default(now())
  termEndDate   DateTime
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([memberId])
  @@index([positionId])
}

// Candidatos propuestos para votación (se seleccionan de miembros presentes)
model Candidate {
  id           String    @id @default(uuid())
  memberId     String
  member       Member    @relation(fields: [memberId], references: [id], onDelete: Cascade)
  council      String    // Consejo: "administracion", "vigilancia", "credito"
  displayOrder Int       // Orden de visualización dentro del consejo (1, 2, 3...)
  bio          String?
  photoUrl     String?
  status       String    @default("active") // active, inactive
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  votes       Vote[]

  @@unique([memberId, council])
  @@index([council])
}

// Votos (un miembro puede votar por un candidato de cada consejo)
model Vote {
  id          String    @id @default(uuid())
  memberId    String
  member      Member    @relation(fields: [memberId], references: [id], onDelete: Cascade)
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  votedAt     DateTime  @default(now())

  @@unique([memberId, candidateId])
  @@index([candidateId])
}

// Configuración del sistema
model Config {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  description String?
  category    String   @default("general") // general, email, database, voting
  updatedAt   DateTime @updatedAt
  updatedBy   String?
}

// Logs de actividad
model ActivityLog {
  id          String   @id @default(uuid())
  adminId     String?
  admin       Admin?   @relation(fields: [adminId], references: [id])
  action      String   // login, create_member, update_member, delete_member, etc.
  entity      String?  // member, candidate, config, etc.
  entityId    String?
  details     String?  // JSON con detalles adicionales
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
}

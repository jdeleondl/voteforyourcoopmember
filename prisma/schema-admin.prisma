// Esquema actualizado con funcionalidades de administración

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Administradores
model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Hash bcrypt
  name      String
  email     String   @unique
  role      String   @default("admin") // admin, superadmin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  logs      ActivityLog[]
}

// Miembros de la cooperativa
model Member {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  cedula    String   @unique
  phone     String?
  status    String   @default("active") // active, inactive, suspended
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendance Attendance?
  votes      Vote[]
}

// Registro de asistencia
model Attendance {
  id           String   @id @default(uuid())
  memberId     String   @unique
  member       Member   @relation(fields: [memberId], references: [id])
  code         String   @unique
  confirmedAt  DateTime @default(now())
  emailSent    Boolean  @default(false)
  emailSentAt  DateTime?
  status       String   @default("active") // active, cancelled, regenerated
  regeneratedCount Int   @default(0)
}

// Candidatos para cada cargo
model Candidate {
  id          String   @id @default(uuid())
  name        String
  position    String   // Cargo: "presidente", "vicepresidente", etc.
  council     String   // Consejo: "administracion", "vigilancia", "credito"
  bio         String?
  photoUrl    String?
  status      String   @default("active") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  votes       Vote[]
}

// Votos
model Vote {
  id          String    @id @default(uuid())
  memberId    String
  member      Member    @relation(fields: [memberId], references: [id])
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  position    String
  votedAt     DateTime  @default(now())

  @@unique([memberId, position])
}

// Configuración del sistema
model Config {
  id                  String   @id @default(uuid())
  key                 String   @unique
  value               String
  description         String?
  category            String   @default("general") // general, email, database, voting
  updatedAt           DateTime @updatedAt
  updatedBy           String?
}

// Logs de actividad
model ActivityLog {
  id          String   @id @default(uuid())
  adminId     String?
  admin       Admin?   @relation(fields: [adminId], references: [id])
  action      String   // login, create_member, update_member, delete_member, etc.
  entity      String?  // member, candidate, config, etc.
  entityId    String?
  details     String?  // JSON con detalles adicionales
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
}
